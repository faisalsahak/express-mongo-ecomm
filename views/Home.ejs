<!DOCTYPE html>
<html>
<% include header %>
  <body>
    <% include Navbar %>
    <div class="container">
      <% products.forEach(function(product){ %>

        <div class="col-sm-6 col-md-4 prod">
          <div class="thumbnail">
            <img class="images" src=<%= product.imagePath %> alt="fifa Image">
            <div class="caption">
              <h3><%= product.title %></h3>
              <p class="description"><%= product.description %></p>
              <div class="clearfix">
                <p class="price pull-left">
                  $  <%= product.price %>
                </p>
                <p><a href="#" class="btn btn-success pull-right" role="button">Add To Cart</a></p>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
    </div>
  </body>

</html>
